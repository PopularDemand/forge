{
  "name": "forge",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^8.2.1"
  },
  "homepage": ".",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.prod.config.js",
    "test": "node scripts/test.js --env=jsdom",
    "webpack:dev": "NODE_ENV=development webpack --config webpack.dev.config.js --watch",
    "start": "NODE_ENV=development ./node_modules/.bin/supervisor build/server.js",
    "prod:start": "NODE_ENV=production node build/server.js",
    "dist": "npm run build && npm run prod:start"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-runtime": "6.23.0",
    "body-parser": "^1.17.2",
    "bootstrap-sass": "^3.3.7",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "debug": "^3.0.1",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "eslint-loader": "1.7.1",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "express-handlebars": "^3.0.0",
    "fs-extra": "3.0.1",
    "handlebars-loader": "^1.6.0",
    "hbs": "^4.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "node-sass-chokidar": "0.0.3",
    "normalizr": "^3.2.3",
    "npm-run-all": "^4.0.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.0.0",
    "promise": "7.1.1",
    "react": "^15.6.1",
    "react-dev-utils": "^3.0.2",
    "react-dom": "^15.6.1",
    "react-error-overlay": "^1.0.9",
    "react-formio": "^1.4.8",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-axios-middleware": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.4.0",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.3",
    "url-loader": "0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "2.5.0",
    "webpack-manifest-plugin": "1.1.0",
    "uglifyjs-webpack-plugin": "github:mishoo/UglifyJS2#harmony-v2.8.22",
    "whatwg-fetch": "2.0.3",
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react-app": "^3.0.2",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "postcss-loader": "^2.0.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "devDependencies": {
    "supervisor": "^0.12.0"
  }
}
